<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundBlue"
    android:paddingStart="30dp"
    android:paddingTop="50dp"
    android:paddingEnd="30dp"
    android:paddingBottom="50dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:cardBackgroundColor="@color/SecondaryBlue"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/simpang_lima_pwd" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:text="Kabupaten Grobogan"
                android:textAlignment="center"
                android:textColor="@color/BackgroundBlue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Kabupaten Grobogan, atau dikenal sebagai Purwodadi, adalah wilayah terluas kedua di Jawa Tengah setelah Kabupaten Cilacap. Terletak di antara Pegunungan Kendeng dan Pegunungan Kapur Utara, dengan dua sungai utama, Kali Serang dan Kali Lusi. Terkenal dengan seni tayubnya, Grobogan memiliki topografi yang meliputi dataran, perbukitan, dan dataran tinggi. Ibu kotanya dipindahkan ke Purwodadi dari Kecamatan Grobogan, dengan sejarah bupati seperti Raden Surokerti Abinarang dan Soegiri. Jumlah penduduknya mencapai 1.453.526 jiwa pada Sensus Penduduk Indonesia 2020."
                android:textAlignment="center"
                android:textColor="@color/TertiaryBlue"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>